{
  "name": "umbra-assert",
  "version": "0.0.1",
  "description": "Assertion library included with the Umbra Test packages.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch-build": "(tsc -w &) && (tsc -w -p tsconfig-test.json)",
    "test": "tsc -p tsconfig-test.json && nyc mocha --require source-map-support/register --recursive lib/tests/tst/**/*.js",
    "lint": "tslint --project .",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "all": "npm run build && npm run test && npm run lint && npm run coveralls"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tst",
      "coverage"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/source-map-support": "^0.5.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "source-map-support": "^0.5.11",
    "tslint": "^5.14.0",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbra-test/umbra-assert.git"
  },
  "author": "umbra-test authors",
  "bugs": {
    "url": "https://github.com/umbra-test/umbra-assert/issues"
  },
  "homepage": "https://github.com/umbra-test/umbra-assert#readme"
}
